{
    "$schema": "./wsda/config.schema.json",
    "homeScreenSections": [
        {
            "type": "mediaBar",
            "items": {
                "types": [
                    "Movie",
                    "Series"
                ],
                "sortBy": [
                    "Random"
                ]
            },
            "showFavoriteButton": true,
            "showWatchlistButton": true,
            "size": "medium"
        },
        {
            "type": "continueWatching",
            "limit": 20,
            "detailLine": [
                "TimeRemaining"
            ],
            "titleLine": "ItemTitleWithEpisodeInfo",
            "accurateSorting": true
        },
        {
            "type": "items",
            "title": "Favorites",
            "items": {
                "limit": 10,
                "isFavorite": true,
                "sortBy": [
                    "DatePlayed"
                ],
                "sortOrder": "Descending"
            }
        },
        {
            "type": "items",
            "title": "Watchlist",
            "items": {
                "limit": 10,
                "isInKefinTweaksWatchlist": true,
                "sortBy": [
                    "DatePlayed"
                ],
                "sortOrder": "Descending"
            }
        },
        {
            "type": "items",
            "title": "Top Rated Anime",
            "items": {
                "tags": [
                    "Anime",
                    "anime"
                ],
                "limit": 10,
                "sortBy": [
                    "CommunityRating"
                ],
                "sortOrder": "Descending"
            },
            "detailFields": [
                "CommunityRating"
            ]
        },
        {
            "type": "items",
            "title": "Recently Released Anime",
            "items": {
                "tags": [
                    "Anime",
                    "anime"
                ],
                "limit": 10,
                "sortBy": [
                    "PremiereDate"
                ],
                "sortOrder": "Descending"
            },
            "detailFields": [
                "ReleaseYearAndMonth"
            ]
        },
        {
            "type": "items",
            "title": "Recently Released Movies",
            "items": {
                "types": [
                    "Movie"
                ],
                "limit": 10,
                "sortBy": [
                    "PremiereDate"
                ],
                "sortOrder": "Descending"
            },
            "detailFields": [
                "ReleaseYearAndMonth"
            ]
        },
        {
            "type": "recentlyAdded"
        }
    ],
    "itemPage": {
        "detailBadges": [
            "ReleaseYear",
            "CommunityRating",
            "AgeRating",
            "EpisodeNumber"
        ],
        "episodeDisplay": "grid",
        "favoriteButton": [
            "Movie",
            "Series",
            "MusicAlbum"
        ],
        "showWatchlistButton": false
    }
}